# Some configurations were grabbed from:
# https://jvns.ca/blog/2024/02/16/popular-git-config-options/#core-excludesfile-a-global-gitignore

[init]
    defaultBranch = main

[commit]
    verbose = true

[help]
    autoCorrect = prompt

[log]
    date = iso

[push]
    autoSetupRemote = true

[core]
    editor = nvim
    excludesfile = ~/.config/git/.gitignore
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    line-numbers = true
    navigate = true    # use n and N to move between diff sections
    paging = never
    tabs = 4
    true-color = always
    wrap-max-lines = unlimited

[merge]
    conflictstyle = zdiff3

[diff]
    algorithm = histogram
    colorMoved = default

[branch]
    sort = -committerdate

[transfer]
    fsckObjects = true

[fetch]
    fsckObjects = true

[receive]
    fsckObjects = true

[credential]
    helper = /mnt/d/Program\\ Files/Git/mingw64/bin/git-credential-manager.exe #WSL

[user]
    name = Mario Guillen
    email = marioagr95@gmail.com

